<div id="container">
<div>
  <h1>Articles</h1>

  <% @articles.each do |article| %>
    <h2><%= article.title %></h2>
    <p><%= article.content %></p>
    <%= link_to "Delete", article_path(article),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  <% end %>

  <%= link_to "Add a New Article", new_article_path %>
</div>


